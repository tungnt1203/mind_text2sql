<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Datasources</h1>
    <%= link_to new_datasource_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 flex items-center", data: { turbo_frame: "modal" } do %>
      <i class='bx bx-plus mr-2'></i> New
    <% end %>
  </div>
  <div id="datasources" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= render @datasources %>
  </div>
</div>
