<div class="container mx-auto px-4 py-8" data-controller="sql-optimize">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Optimize SQL</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- SQL Input -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Input SQL</h2>
      <textarea
        data-sql-optimize-target="input"
        class="w-full h-40 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
        placeholder="Enter your SQL query here..."
      ></textarea>
    </div>

    <!-- Optimized Output -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Optimized SQL</h2>
      <div
        data-sql-optimize-target="output"
        class="w-full h-40 p-2 border border-gray-300 rounded-md overflow-auto bg-gray-50"
      ></div>
    </div>
  </div>

  <div class="mt-6 flex justify-center">
    <button
      data-action="click->sql-optimize#optimize"
      class="btn-primary"
    >
      Optimize SQL
    </button>
  </div>
</div>
